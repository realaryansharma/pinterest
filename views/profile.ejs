<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="profileCard">
        <div class="profileImg"></div>
        <div class="profileDetails">
            <h3><%=user.username%></h3>
            <p><%=user.email%></p>
            <p>@bio</p>
            <p>@skills</p>
            <button id="logoutButton">Log Out</button>
            <button onclick="openUploadPopup()">Upload</button>
            <div class="popup" id="showPopup">
                <form action="/upload" method="post" enctype="multipart/form-data" />
                    <input type="file" name="file" /><br>
                    <label>Enter the post text</label>
                    <textarea id="w3review" name="imagecaption" rows="4" cols="50"></textarea>
                    <div>
                        <button type="submit">Upload</button>
                        <button type="button" onclick="closeUploadPopup()">Close</button>
                    </div>                
                </form>
            </div>
            
        </div>
    </div>

    <div class="container">
         <div class="cards flex">
            <%user.posts.forEach(function(post) {%>
                <div class="card" style="width: 18rem;">
                    <img src="/images/uploads/<%= post.image%>">
                    <div class="card-body">
                    <h5 class="card-title"><%= post.imageText%></h5>
                    </div>
                </div>
            <%})%>
         </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/javascripts/profile.js"></script>


</body>
</html>